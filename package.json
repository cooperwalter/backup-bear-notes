{
  "name": "@cooperwalter/backup-bear-notes",
  "version": "1.0.6",
  "description": "Back up your Bear Notes content to a folder",
  "type": "module",
  "bin": {
    "backup-bear-notes": "dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "backup": "tsx src/index.ts",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "release": "npm version patch && npm publish --access public && git push && git push --tags",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cooperwalter/backup-bear-notes.git"
  },
  "keywords": [
    "bear",
    "notes",
    "app",
    "backup"
  ],
  "author": "TehShrike",
  "license": "WTFPL",
  "dependencies": {
    "make-dir": "^5.1.0",
    "mri": "^1.2.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "untildify": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/sqlite3": "^3.1.11",
    "@vitest/coverage-v8": "^2.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
